{
  "name": "navis-backend-functions",
  "description": "Firebase Cloud Functions for Navis logistics app",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "firebase emulators:start --only=functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src/ --ext .ts"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^7.0.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.4",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "typescript": "^5.3.3"
  }
}
