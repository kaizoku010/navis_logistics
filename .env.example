# Environment Template for Email Configuration
# Copy this file to .env and fill in your values

# ========================================
# EMAIL CONFIGURATION
# ========================================

# Mail Server Host
# Examples: 
#   - mail.yourdomain.com (cPanel/Plesk)
#   - smtp.gmail.com (Google Workspace)
#   - smtp.office365.com (Office 365)
MAIL_HOST=mail.yourdomain.com

# Mail Server Port
# 587 = TLS (unencrypted connection upgraded to TLS)
# 465 = SSL (encrypted from start)
# 25 = SMTP (not recommended)
MAIL_PORT=587

# Email Account Username (usually the full email address)
MAIL_USER=noreply@yourdomain.com

# Email Account Password
# For Gmail: Use App-Specific Password
# For Office 365: Use your account password
# For others: Use the password provided by your hosting
MAIL_PASSWORD=your_email_password_here

# From Address (the email that appears in "From" field)
MAIL_FROM=noreply@yourdomain.com

# Use SSL/TLS
# true for port 465 (SSL)
# false for port 587 (TLS)
MAIL_SECURE=false

# ========================================
# APPLICATION URLS
# ========================================

# Frontend Application URL (used in email links)
REACT_APP_URL=https://navis.yourdomain.com

# Firebase Cloud Functions Custom Email URL
# Format: https://[region]-[project-id].cloudfunctions.net/sendCustomEmail
# You'll find this in Firebase Console after deploying functions
REACT_APP_SEND_CUSTOM_EMAIL_URL=https://region-projectid.cloudfunctions.net/sendCustomEmail

# ========================================
# ADMIN TOKEN
# ========================================

# Secure token for custom email endpoint
# Generate with: openssl rand -hex 32
REACT_APP_ADMIN_TOKEN=your-secure-random-token-here

# ========================================
# FIREBASE CONFIGURATION
# ========================================

REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# ========================================
# MAPS API
# ========================================

REACT_APP_MAPS_API_KEY=your_google_maps_api_key

# ========================================
# BACKEND/API
# ========================================

REACT_APP_API_ENDPOINT=http://localhost:3001

# ========================================
# NODE ENVIRONMENT
# ========================================

NODE_ENV=development
# For production: NODE_ENV=production
